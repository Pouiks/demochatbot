# EditorConfig pour garantir la cohérence des indentations
# https://editorconfig.org

root = true

# Règles globales
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Fichiers Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Fichiers JavaScript/TypeScript
[*.{js,ts,tsx,jsx}]
indent_style = space
indent_size = 2

# Fichiers JSON
[*.json]
indent_style = space
indent_size = 2

# Fichiers YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Fichiers Markdown
[*.md]
trim_trailing_whitespace = false

